{
  "compilerOptions": {
    "lib": ["esnext"],
    "checkJs": true,
    "module": "NodeNext",
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "rootDir": "."
  },
  "include": ["src"]
}
