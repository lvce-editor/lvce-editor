{
  "name": "@lvce-editor/shared-process",
  "version": "0.0.0-dev",
  "description": "Utility package for @lvce-editor/server",
  "main": "src/sharedProcessMain.js",
  "type": "module",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ../../node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ../../node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "keywords": [
    "Lvce Editor"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvce-editor/lvce-editor.git",
    "directory": "packages/shared-process"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.5.1",
    "@lvce-editor/ipc": "^14.7.0",
    "@lvce-editor/json-rpc": "^7.2.0",
    "@lvce-editor/jsonc-parser": "^1.5.0",
    "@lvce-editor/pretty-error": "^2.0.0",
    "@lvce-editor/rpc-registry": "^8.6.0",
    "@lvce-editor/verror": "^1.7.0",
    "is-object": "^1.0.2",
    "xdg-basedir": "^5.1.0"
  },
  "optionalDependencies": {
    "@lvce-editor/embeds-process": "^4.4.0",
    "@lvce-editor/file-system-process": "^5.0.0",
    "@lvce-editor/file-watcher-process": "^3.6.0",
    "@lvce-editor/network-process": "^5.2.0",
    "@lvce-editor/preload": "^1.5.0",
    "@lvce-editor/preview-process": "^11.0.0",
    "@lvce-editor/process-explorer": "^2.4.0",
    "@lvce-editor/pty-host": "^7.1.0",
    "@lvce-editor/search-process": "^12.0.0",
    "@lvce-editor/typescript-compile-process": "^4.1.0",
    "open": "^11.0.0",
    "tail": "^2.2.6",
    "tmp-promise": "^3.0.3",
    "trash": "^10.1.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/is-object": "^1.0.5",
    "@types/tail": "^2.2.3",
    "@types/tar-fs": "^2.0.4",
    "get-port": "^7.1.0",
    "tar-fs": "^3.1.1",
    "wait-for-expect": "^4.0.0"
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "node/prefer-global/process": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off",
      "quotes": "off",
      "n/prefer-global/process": [
        "error",
        "always"
      ]
    },
    "ignores": [
      "distmin"
    ]
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
