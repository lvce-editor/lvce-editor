{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["esnext"],
    "checkJs": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src", "test", "typings/types.d.ts"]
}
