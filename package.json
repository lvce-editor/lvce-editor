    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lerna": "^8.2.4",
    "nodemon": "^3.1.11",
